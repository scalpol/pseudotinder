<ol>
  <% @matches.each do |match| %>
        <div class="card" style="width: 18rem;">
          <img class="card-img-top" src="<%= match.picture %>" alt="User profile picture">
          <div class="card-body">
            <h5 class="card-title"><%= match.email %></h5>
            <p class="card-text"><%= match.bio %></p>
          </div>
          <%= link_to 'Chat', chat_path(user_id: match.user_two_id, match_id: match.id), class: "btn btn-success" %>
        </div>
  <% end %>
</ol>
